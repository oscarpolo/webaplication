@{
}
@model List<WebApplication3.Models.Employees.EmployeeViewModel>

<form action="../Employees/EmployeesById" method="POST">
    <input id="id" name="id" type="text" value="" />
    <input type="submit" value="Guardar" />
</form>

<table>
    <tr>
        <th>Document</th>
        <th>Number</th>
        <th>Area</th>
    </tr> 
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.DocumentId</td>
            <td>@item.EmployNumber</td>
            <td>@item.CostCenter</td>
        </tr>
    }
</table>

